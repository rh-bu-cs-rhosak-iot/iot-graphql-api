{
  "name": "iot-graphql-api",
  "version": "1.0.0",
  "description": "Provides access to Meter data in a PostgreSQL DB",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "nodemon --config nodemon.json --exec 'ts-node' dist/server.js",
    "format": "prettier src/**/*.ts --trailing-comma=none --single-quote --write",
    "lint": "prettier src/**/*.ts --trailing-comma=none --single-quote --check"
  },
  "dependencies": {
    "apollo-server": "^2.25.2",
    "apollo-server-express": "^2.25.2",
    "env-var": "^7.0.1",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "pino": "^6.11.3"
  },
  "devDependencies": {
    "@types/node": "^12.20.15",
    "@types/pino": "^6.3.8",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
